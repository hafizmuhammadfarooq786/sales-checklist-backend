# =============================================================================
# Sales Checklist API - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# For production deployment, use .env.production as reference.
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development                    # development | production
DEBUG=True                                 # True | False (always False in production)
PROJECT_NAME=Sales Checklist API
API_V1_STR=/api/v1

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Format: postgresql+asyncpg://user:password@host:port/database
# Recommended: Neon (free tier), Supabase, or AWS RDS
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sales_checklist
DB_ECHO=False                              # True to log SQL queries (dev only)

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
# Used for caching, rate limiting, and Celery task queue
# Recommended: Redis Cloud, Upstash, or AWS ElastiCache
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication & Security
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure key for production!
# Run: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080          # 7 days = 10080 minutes

# Password Validation Rules
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_UPPERCASE=True
REQUIRE_PASSWORD_LOWERCASE=True
REQUIRE_PASSWORD_NUMBERS=True
REQUIRE_PASSWORD_SPECIAL=False             # Set True for production

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
# Create an IAM user with S3 and SES permissions
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAEXAMPLE123456789
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# S3 Buckets
# Development: Use single bucket
# Production: Use separate buckets for audio, reports, backups
AWS_S3_BUCKET_NAME=sales-checklist-dev
S3_BUCKET_AUDIO=sales-checklist-dev
S3_BUCKET_REPORTS=sales-checklist-dev
S3_BUCKET_BACKUPS=sales-checklist-dev

# -----------------------------------------------------------------------------
# Amazon SES (Email Service)
# -----------------------------------------------------------------------------
# Verify your domain/email in SES console before sending
SES_REGION=us-east-1
SES_SENDER_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# OpenAI Configuration (Required for transcription & analysis)
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key
OPENAI_MODEL_WHISPER=whisper-1             # Audio transcription model
OPENAI_MODEL_GPT=gpt-4-turbo-preview       # Analysis model

# -----------------------------------------------------------------------------
# ElevenLabs (Optional - Text-to-Speech for Coaching)
# -----------------------------------------------------------------------------
# Get your API key from: https://elevenlabs.io
ELEVENLABS_API_KEY=sk_your_elevenlabs_key
ELEVENLABS_VOICE_ID=                       # Voice ID for coaching audio

# -----------------------------------------------------------------------------
# Celery (Background Task Processing)
# -----------------------------------------------------------------------------
# Uses separate Redis databases (1 and 2) to avoid conflicts
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60                   # API requests per minute per user

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE=524288000                  # 500MB in bytes

# -----------------------------------------------------------------------------
# CORS (Allowed Origins)
# -----------------------------------------------------------------------------
# Leave commented to use defaults from config.py
# Uncomment and customize for production
# ALLOWED_ORIGINS=["http://localhost:3000","https://app.yourdomain.com"]

# -----------------------------------------------------------------------------
# Monitoring & Error Tracking (Optional but recommended)
# -----------------------------------------------------------------------------
# Get your DSN from: https://sentry.io
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Salesforce Integration (Optional)
# -----------------------------------------------------------------------------
# Create a Connected App in Salesforce Setup
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_REDIRECT_URI=http://localhost:8000/api/v1/salesforce/callback
